<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facturas</title>
    <link rel="icon" type="image/png" href="img/Favicon.png">

    <!-- Custom css -->
    <link rel="stylesheet" href="styles/index.css">

    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <div class="contenedor">

        <div class="cont cont_izq">
            <div class="cont_init">
                <h1 class="title-big">GENERAR<br>FACTURA</h1>
                <form action="/iniciar_sesion" method="POST">
                    <h3 class="title-small">Código del empleado</h3>
                    <div class="form-codigo">
                        <input type="number" id="codigo" name="codigo" tabindex="1" required>
                    </div>
                    <button type="submit" class="boton boton-init" tabindex="2">Iniciar sesión</button>
                </form>


            </div>
        </div>

        <div class="cont cont_der">
            <div class="cont_add">
                <div>
                    <h2 class="title-big title-addpersona">Ingresar persona al sistema</h2>
                </div>
                <div>
                    <form action="/addPersona" method="POST">
                        <div class="mb-3">
                            <label for="persona" class="title-small">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="persona" class="title-small">Apellido</label>
                            <input type="text" class="form-control" id="apellido" name="apellido" tabindex="2" required>
                        </div>
                        <div class="mb-3 row">
                            <div class="col-6">
                                <label for="persona" class="title-small">Tipo documento</label>
                                <select id="tipoDoc" name="tipoDoc" class="form-select" aria-label="Default selected"
                                    tabindex="3" required>
                                    <% tipoDoc.forEach((data)=> {%>
                                        <option value=<%=data.IDTIPODOC%> selected><%= data.DESCTIPODOC%>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="persona" class="title-small">Tipo Persona</label>
                                <select id="tipoPer" name="tipoPer" class="form-select" aria-label="Default selected"
                                    tabindex="4" required>
                                    <% tipoPer.forEach((data)=> {%>
                                        <option value=<%=data.IDTIPOPERSONA%> selected><%= data.DESCTIPOPERSONA%>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="persona" class="title-small">Numero de documento</label>
                            <input type="number" class="form-control" id="documento" name="documento" tabindex="5"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="persona" class="title-small">Dirección</label>
                            <input type="text" class="form-control" id="direccion" name="direccion" tabindex="6">
                        </div>
                        <button type="submit" class="boton-enviar" tabindex="8">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>